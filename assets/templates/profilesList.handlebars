{{> header.hbs}}

<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h2>Users</h2>
      <table class="table table-bordered table-hover table-sm">
        <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Username</th>
          <th>Division</th>
          <th>Contract Type</th>
        </tr>
        </thead>
        {{#each values}}
          <tr>
            <td>{{name}}</td>
            <td>{{username}}</td>
            <td>{{division}}</td>
            <td>{{contract}}</td>
          </tr>
        {{/each}}
      </table>
    </div>
    <div class="col-sm-4">
      <form method="post" action="/profile" class="form-inline">
        <h2>Add user</h2>
        <div class="form-group">
          <label for="newFullName" class="sr-only">Full Name</label>
          <input type="text" class="form-control form-control" id="newFullName"
                 name="fullName" placeholder="full name">
        </div>
        <div class="form-group">
          <label for="newUsername" class="sr-only">Username</label>
          <div class="input-group">
            <input type="text" class="form-control form-control" id="newUsername"
                   name="username" placeholder="username">
            <div class="input-group-append">
              <small class="text-muted input-group-text">@hanover.edu</small>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="newContractType" class="sr-only">Contract Type</label>
          <select name="contractType" class="form-control form-control" id="newContractType">
            {{#each contractTypes}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="newDivision" class="sr-only">Division</label>
          <select name="division" class="form-control form-control" id="newDivision">
            {{#each divisions}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <input type="submit" value="Add Staff"
                 class="btn btn-outline-success float-right login_btn">
        </div>
      </form>
    </div>
  </div>

</div>
{{> footer.hbs}}