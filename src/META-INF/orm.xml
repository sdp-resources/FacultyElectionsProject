<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
        http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd" version="2.1">
    <entity class="fsc.entity.Profile" name="Profile" access="FIELD">
        <table name="profiles"/>
        <attributes>
            <id name="username"></id>
            <basic name="status">
                <enumerated>STRING</enumerated>
            </basic>
        </attributes>
    </entity>
    <entity class="fsc.entity.Division" name="Division" access="PROPERTY">
        <table name="divisions"/>
            <attributes>
                <id name="name"/>
            </attributes>
    </entity>
    <entity class="fsc.entity.ContractType" name="ContractType" access="PROPERTY">
        <table name="contract_types"/>
        <attributes>
            <id name="contract"/>
        </attributes>
    </entity>
    <entity class="fsc.entity.query.NamedQuery" name="NamedQuery" access="FIELD">
        <table name="named_queries"/>
        <attributes>
            <id name="name"/>
            <basic name="query">
                <convert converter="dbGateway.converter.QueryDbConverter"/>
            </basic>
        </attributes>
    </entity>
    <entity class="fsc.entity.Committee" name="Committee" access="FIELD">
        <table name="committees"/>
        <attributes>
            <id name="name"/>
            <basic name="description"/>
            <one-to-many name="seats" target-entity="fsc.entity.Seat">
                <cascade />
            </one-to-many>
        </attributes>
    </entity>
    <entity class="fsc.entity.Seat" name="Seat" access="FIELD">
        <table name="seats"/>
        <attributes>
            <id name="id">
                <generated-value/>
            </id>
            <basic name="name"/>
            <basic name="defaultQuery">
                <convert converter="dbGateway.converter.QueryDbConverter"/>
            </basic>
            <many-to-one name="committee">
                <join-column name="committee_id" nullable="false"/>
            </many-to-one>
            <many-to-one name="profile" target-entity="fsc.entity.Profile"/>
        </attributes>
    </entity>
</entity-mappings>
